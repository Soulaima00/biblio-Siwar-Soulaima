<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/test"
    tools:context=".view.Emplacement_Activity"
    android:orientation="vertical"
    android:gravity="center">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:elevation="@dimen/cardview_default_radius"
        app:cardCornerRadius="40dp"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/beige2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Emplacement"
                    android:textColor="@color/marron"
                    android:textSize="30dp" />

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/baseline_add_location_alt_24"
                    android:layout_marginLeft="80dp"/>

            </LinearLayout>

            <EditText
                android:id="@+id/etrayon"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:drawablePadding="8dp"
                android:hint="Modifier Rayon"
                android:padding="8dp"
                android:textColor="@color/marron"/>

    <EditText
        android:id="@+id/etarmoire"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:drawablePadding="8dp"
        android:hint="Modifier armoire"
        android:padding="8dp"
        android:textColor="@color/marron"/>
    <EditText
        android:id="@+id/etetagere"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:drawablePadding="8dp"
        android:hint="Modifier etagere"
        android:padding="8dp"
        android:textColor="@color/marron"/>
    <Button
        android:id="@+id/btnsubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submiter"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:background="@drawable/shapeovale2"
        />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>