<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/test"
    tools:context=".view.Emplacement_Activity"
    android:orientation="vertical"
    android:gravity="start">

    <Button
        android:id="@+id/btnRetour"
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="120dp"
        android:background="@android:color/transparent"
        android:drawableStart="@drawable/baseline_arrow_back_ios_24" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:elevation="@dimen/cardview_default_radius"
        app:cardCornerRadius="40dp"
        android:background="@android:color/transparent"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/beige2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Emplacement"
                    android:textColor="@color/marron"
                    android:textSize="30dp" />

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/baseline_add_location_alt_24" />

            </LinearLayout>

            <EditText
                android:id="@+id/etrayon"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:drawablePadding="8dp"
                android:hint="Modifier Rayon"
                android:padding="8dp"
                android:textColor="@color/marron" />

            <EditText
                android:id="@+id/etarmoire"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:drawablePadding="8dp"
                android:hint="Modifier armoire"
                android:padding="8dp"
                android:textColor="@color/marron" />

            <EditText
                android:id="@+id/etetagere"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:drawablePadding="8dp"
                android:hint="Modifier etagere"
                android:padding="8dp"
                android:textColor="@color/marron" />

            <Button
                android:id="@+id/btnsubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:background="@drawable/shapeovale2"
                android:text="submiter" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>